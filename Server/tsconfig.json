{
  "compilerOptions": {
    "target": "ES2020",                 // JavaScript version
    "module": "CommonJS",               // Node.js modules
    "rootDir": "./src",                 // Source folder
    "outDir": "./dist",                 // Compiled JS output
    "allowJs": true,                     // Include .js files
    "checkJs": false,                    // Optional: true to type-check JS
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true                    // Optional: helpful for debugging
  },
  "include": ["src/**/*"],               // All files in src
  "exclude": ["node_modules", "dist"],
  "types": ["node"]
}